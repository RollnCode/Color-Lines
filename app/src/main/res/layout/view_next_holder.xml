<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:padding="@dimen/key_line_1">

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="@dimen/next_size"
        android:layout_height="@dimen/next_size"
        android:padding="@dimen/next_padding"
        android:src="@drawable/shape_circle"
        android:contentDescription="@string/content_next_ball"/>

    <ImageView
        android:id="@+id/iv_second"
        android:layout_width="@dimen/next_size"
        android:layout_height="@dimen/next_size"
        android:padding="@dimen/next_padding"
        android:src="@drawable/shape_circle"
        android:contentDescription="@string/content_next_ball"/>

    <ImageView
        android:id="@+id/iv_third"
        android:layout_width="@dimen/next_size"
        android:layout_height="@dimen/next_size"
        android:padding="@dimen/next_padding"
        android:src="@drawable/shape_circle"
        android:contentDescription="@string/content_next_ball"/>

</LinearLayout>